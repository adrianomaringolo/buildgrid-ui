	"exports": {
		"./components": {
			"import": "./dist/components/index.d.ts",
			"require": "./dist/components/index.d.ts"
		},
		"./blocks": {
			"import": "./dist/blocks/index.d.ts",
			"require": "./dist/blocks/index.d.ts"
		},
